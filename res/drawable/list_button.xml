<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#eae4d6" />
      <stroke
          android:width="1dp"
          android:color="#eae4d6" />
      <corners
          android:radius="3dp" />
      <padding
          android:left="0dp"
          android:top="0dp"
          android:right="0dp"
          android:bottom="0dp" />
    </shape>
  </item>
  <item>
    <shape>        
      <gradient
          android:startColor="#d1c7ad"
          android:endColor="#d1c7ad"
          android:angle="90" />            
      <stroke
          android:width="1dp"
          android:color="#d1c7ad" />
      <corners
          android:radius="5dp" />
      <padding
          android:left="0dp"
          android:top="0dp"
          android:right="0dp"
          android:bottom="0dp" />
    </shape>
  </item>
</selector>